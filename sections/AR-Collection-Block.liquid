<style>
.cl_cards_layout {
  width: 100%;
  height: auto;
}
.cl_cards_layout h2 {
  color: #AB572D;
  text-align: center;
  font-size: 50px;
  font-weight: 500;
  line-height: normal;
  margin: 0 0 55px 0;
}
.cl_cards_layout .cl_cards_wrapper {
  display: flex;
  row-gap: 30px;
  flex-wrap: wrap;
  justify-content: space-between;
}
.cl_cards_layout .block__col {
  position: relative;
  width: calc(50% - 22px);
  height: 460px;
}
.cl_cards_layout .cl_cards_wrapper .block__col:nth-child(1) {
  width: calc(35% - 22px);
}
.cl_cards_layout .cl_cards_wrapper .block__col:nth-child(2) {
  width: calc(65% - 22px);
}
.cl_cards_layout .cl_cards_wrapper .block__col:nth-child(5) {
  width: calc(26% - 22px);
}
.cl_cards_layout .cl_cards_wrapper .block__col:nth-child(6),
.cl_cards_layout .cl_cards_wrapper .block__col:nth-child(7) {
  width: calc(37% - 22px);
}
.cl_cards_layout .block_image {
  width: 100%;
  height: 100%;
  position: relative;
  display: inline-block;
}
.block_image .overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #000;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 0.2;
}
.cl_cards_layout img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}
.cl_cards_layout .block_content {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  padding: 20px;
  display: flex;
  align-items: end;
  text-decoration: none;
  transition: 0.4s ease-in-out;
}
.cl_cards_layout .block_content:hover {
background-color: linear-gradient(0deg, rgba(171,87,45,0.6558998599439776) 0%, rgba(255,214,0,0.4654236694677871) 100%);
}
.cl_cards_layout .block_content:hover h3 {
  font-size: 25px; 
  color: #ffdfd0;
}
.cl_cards_layout h3 {
  color: #FFF;
  font-size: 24px;
  font-weight: 500;
  line-height: normal;
  margin: 0;
  transition: 0.4s ease-in-out;
}
</style>
{% style %}
 {% for block in section.blocks %}
  #block__col-{{ block.id }}  .block_image .overlay {
     opacity:{{ block.settings.img_overly }}; 
  }
{% endfor %}

  #cl_cards_layout-{{ section.id }} h2 {
    color:{{ section.settings.font_color }}; 
  }
  #cl_cards_layout-{{ section.id }} {
    background-color:{{ section.settings.bg_color }};
    padding-top:{{ section.settings.desktop_padding_top }}px;
    padding-bottom:{{ section.settings.desktop_padding_bottom }}px;
    margin-top:{{ section.settings.desktop_margin_top }}px;
    margin-bottom:{{ section.settings.desktop_margin_bottom }}px;
  }
  @media screen and (max-width: 991px) { 

#cl_cards_layout-{{ section.id }} {
  padding-top:{{ section.settings.mbl_padding_top }}px;
  padding-bottom:{{ section.settings.mbl_padding_bottom }}px;
  margin-top:{{ section.settings.mbl_margin_top }}px;
  margin-bottom:{{ section.settings.mbl_margin_bottom }}px;
}
  }
{% endstyle %}

<section class="cl_cards_layout" id="cl_cards_layout-{{ section.id }}">
  <div class="page-width">
        {% if section.settings.heading != blank %}
          <h2>{{ section.settings.heading }}</h2>
        {% endif %}
      <div class="cl_cards_wrapper">
        {% for block in section.blocks %}
            <div class="block__col" id="block__col-{{ block.id }}"> 
                {% assign colitem = collections[block.settings.collection] %}
                {% if colitem.image != blank %}
                  <div class="block_image">
                    {{ colitem.image | image_url: width: colitem.image.width | image_tag: loading: 'lazy' }}
                    <div class="overlay"></div>
                  </div>  
                {% endif %}
                <a href="{{ colitem.url }}" class="block_content">
                  <h3>{{ colitem.title }}</h3>
                </a>
            </div> 
        {% endfor %}
    </div>
  </div>
</section>
