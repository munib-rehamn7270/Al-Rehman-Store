<style>
.cl_cards_layout {
  width: 100%;
  height: auto;
}
.cl_cards_layout h2 {
  color: #AB572D;
  text-align: center;
  font-size: 50px;
  font-weight: 500;
  line-height: normal;
  margin: 0 0 55px 0;
}
.cl_cards_layout .cl_cards_wrapper {
  display: flex;
  row-gap: 40px;
  flex-wrap: wrap;
  margin: 0 -20px;
}
.cl_cards_layout .block__col, 
.cl_cards_layout .block__large, 
.cl_cards_layout .block__medium {
  position: relative;
  max-width: calc(33.3% - 40px);
  height: 625px;
  width: 100%;
  margin: 0 20px;
}
.cl_cards_layout .block__medium {
  max-width: calc(44% - 40px);
}
.cl_cards_layout .block__large {
  max-width: calc(56% - 40px);
}
.cl_cards_layout .block_image {
  width: 100%;
  height: 100%;
  position: relative;
  display: inline-block;
}
.block_image .overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #000;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 0.2;
  border-radius: 16px;
}
.cl_cards_layout img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 16px;
  display: block;
}
@media screen and (max-width: 991px) {
.cl_cards_layout .cl_cards_wrapper {
  display: grid !important;
  grid-template-columns: repeat(2, 1fr);
  gap: 20px;
  margin: 0 !important;
}
.cl_cards_layout .block__large {
  max-width: 100%;
}
.cl_cards_layout .block__medium {
  max-width: 100%;
}
.cl_cards_layout .block__col, 
.cl_cards_layout .block__large, 
.cl_cards_layout .block__medium {
  max-width: 100%;
  height: 500px;
  margin: 0;
}
}
@media screen and (max-width: 580px) {
 .cl_cards_layout .cl_cards_wrapper {
  grid-template-columns: 1fr;
} 
.cl_cards_layout .block__col, 
.cl_cards_layout .block__large, 
.cl_cards_layout .block__medium {
  height: 420px;
}
}
</style>
{% style %}
 {% for block in section.blocks %}
  #block__col-{{ block.id }}  .block_image .overlay {
     opacity:{{ block.settings.img_overly }}; 
  }
{% endfor %}

  #cl_cards_layout-{{ section.id }} h2 {
    color:{{ section.settings.font_color }}; 
  }
  #cl_cards_layout-{{ section.id }} {
    background-color:{{ section.settings.bg_color }};
    padding-top:{{ section.settings.desktop_padding_top }}px;
    padding-bottom:{{ section.settings.desktop_padding_bottom }}px;
    margin-top:{{ section.settings.desktop_margin_top }}px;
    margin-bottom:{{ section.settings.desktop_margin_bottom }}px;
  }
  @media screen and (max-width: 991px) { 

#cl_cards_layout-{{ section.id }} {
  padding-top:{{ section.settings.mbl_padding_top }}px;
  padding-bottom:{{ section.settings.mbl_padding_bottom }}px;
  margin-top:{{ section.settings.mbl_margin_top }}px;
  margin-bottom:{{ section.settings.mbl_margin_bottom }}px;
}
  }
{% endstyle %}

<section class="cl_cards_layout" id="cl_cards_layout-{{ section.id }}">
  <div class="page-width">
        {% if section.settings.heading != blank %}
          <h2>{{ section.settings.heading }}</h2>
        {% endif %}
      <div class="cl_cards_wrapper">
        {% for block in section.blocks %}
            <div class="{% if block.settings.image-size == 'large' %}block__large{% elsif block.settings.image-size == 'medium'  %}block__medium{% else %}block__col{% endif %}" id="block__col-{{ block.id }}"> 
              {% if block.settings.image != blank %}
                <div class="block_image">
                  {{ block.settings.image | image_url: width: block.settings.image.width | image_tag: loading: 'lazy' }}
                  <div class="overlay"></div>
                </div>
              {% endif %}
            </div> 
        {% endfor %}
    </div>
  </div>
</section>
